<mvc:View controllerName="umc.app.controller.sys.sys07_uplod_l"
	xmlns:smartfield="sap.ui.comp.smartfield"
	xmlns:smartform="sap.ui.comp.smartform"
	xmlns:core="sap.ui.core"
	xmlns="sap.m"
	xmlns:m="sap.m"
	xmlns:f="sap.f"
	xmlns:l="sap.ui.layout"
	xmlns:smartFilterBar="sap.ui.comp.smartfilterbar"
	xmlns:smartTable="sap.ui.comp.smarttable"
	xmlns:sv="sap.ui.comp.smartvariants"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns:uxap="sap.uxap"
	xmlns:table="sap.ui.table"
	xmlns:customData="http://schemas.sap.com/sapui5/extension/sap.ui.core.CustomData/1">

	<f:DynamicPage id="dynamicPageId" headerExpanded="true" showFooter="true" busy="{localModel>/isBusy}">
		<f:title>
			<f:DynamicPageTitle id="DynamicPageTitle">
				<f:heading>
					<Title id="Title" text="{sys>SYS07_DICT_L}"/>
				</f:heading>
				<f:navigationActions>
					<m:Button id="_IDGenButton3" icon="sap-icon://home" tooltip="nav-home" press="navToHome"/>
				</f:navigationActions>

			</f:DynamicPageTitle>

		</f:title>

		<f:header>
			<f:DynamicPageHeader id="DynamicPageHeader" pinnable="true">

				<f:content>

					<smartFilterBar:SmartFilterBar id="smartFilterBar" useToolbar="true" entitySet="SYS07_EMAIL" persistencyKey="sys07_receiptprintFilterBar" showFilterConfiguration="true">
						<smartFilterBar:controlConfiguration>
							<smartFilterBar:ControlConfiguration id="_IDGenControlConfiguration1" key="H_CODE" label="{sys>SYS07_H_CODE}" visibleInAdvancedArea="true"  />
							<smartFilterBar:ControlConfiguration id="_IDGenControlConfiguration2" key="H_NAME" label="{sys>SYS07_H_NAME}" visibleInAdvancedArea="true"  />
							<smartFilterBar:ControlConfiguration id="_IDGenControlConfiguration3" key="BP_ID" label="{sys>SYS07_D_NAME}" visibleInAdvancedArea="true"  />
							<smartFilterBar:ControlConfiguration id="_IDGenControlConfiguration4" key="EMAIL_ADDRESS" label="{sys>SYS07_D_NAME}" visibleInAdvancedArea="true"  />
							<smartFilterBar:ControlConfiguration id="_IDGenControlConfiguration5" key="EMAIL_ADDRESS_NAME" label="{sys>SYS07_D_NAME}" visibleInAdvancedArea="true"  />

						</smartFilterBar:controlConfiguration>
					</smartFilterBar:SmartFilterBar>

				</f:content>
			</f:DynamicPageHeader>
		</f:header>

		<f:content>

			<smartTable:SmartTable id="smartTable" smartVariant="__SVM01" showFullScreenButton="true" persistencyKey="sys07_SmartTableAnalytical_Explored" entitySet="SYS07_EMAIL" initiallyVisibleFields="H_CODE,H_NAME,BP_ID,EMAIL_ADDRESS,EMAIL_ADDRESS_NAME,CD_BY,CD_TIME,UP_BY,UP_TIME" ignoredFields="ID"  requestAtLeastFields="ID" smartFilterId="smartFilterBar" enableExport="true" useVariantManagement="true" useTablePersonalisation="true" tableType="Table" showRowCount="true" beforeRebindTable="onRebind" placeToolbarInTable="true" header="{com>TITLE_RESULT}" enableAutoBinding="false">

				<smartTable:customToolbar>
					<OverflowToolbar id="_IDGenOverflowToolbar1">
						<content>
							<ToolbarSpacer id="_IDGenToolbarSpacer1" />

							<Button id="_IDGenButton2"  icon="sap-icon://create" text="{sys>SYS07_BUTTON_CREAT}"  visible="{localModel>/SYS07_CREAT}"  press="navTo('RouteCre_sys07')" width="10em"/>
						</content>
					</OverflowToolbar>
				</smartTable:customToolbar>
				<table:Table id="detailTable" rowMode="Auto" rowActionCount="1">

					<table:columns>
						<table:Column id="H_CODE" visible="true" autoResizable="true" sortProperty="H_CODE" filterProperty="H_CODE" width="20em">
							<table:customData>
								<core:CustomData key="p13nData" value='\{"columnKey":"H_CODE", "leadingProperty":"H_CODE"}'/>
							</table:customData>
							<table:label>
								<Label id="SYS07_H_CODE" text="{sys>SYS07_H_CODE}"/>
							</table:label>
							<table:template>
								<Text id="TEMP_H_CODE" text="{H_CODE}"></Text>
							</table:template>
						</table:Column>
				


					</table:columns>
					<table:rowActionTemplate>
						<table:RowAction id="RowAction">
							<table:items>
								<table:RowActionItem id="RowActionItem" type="Navigation" press="onPress"  visible="{localModel>/SYS07_DETAIL_VIEW}" />
							</table:items>
						</table:RowAction>
					</table:rowActionTemplate>

				</table:Table>


			</smartTable:SmartTable>
		</f:content>
		<f:footer>
			<OverflowToolbar id="otbFooter" visible="{=${message>/}.length > 0}">
				<Button icon="sap-icon://alert" text="{=${message>/}.length}" visible="{=${message>/}.length > 0}" type="Emphasized" press="onClickMessagePopover" id="messageButton">
				</Button>
			</OverflowToolbar>
		</f:footer>
	</f:DynamicPage>

</mvc:View>
