<mvc:View
	controllerName="umc.app.controller.sys.sys05_mail_d"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns="sap.m"
    xmlns:f="sap.f"
	xmlns:c="sap.ui.core"
    xmlns:l="sap.ui.layout"
	displayBlock="true"
	height="100%"
	busyIndicatorDelay="0"
>
<f:DynamicPage id="idDynamicPage" showFooter="true">
    <!-- Title -->
    <f:title>
        <f:DynamicPageTitle id="idDynamicPageTitle">
            <f:heading>
                <Toolbar id="idToolbar">
                    <Title id="idTitle" text="Mail Template"/>
                </Toolbar>
            </f:heading>
        </f:DynamicPageTitle>
    </f:title>

    <!-- Header -->
     <f:header>
        <f:DynamicPageHeader id="idDynamicPageHeader" pinnable="true">
            <f:content>
                <OverflowToolbar id="idOverflowToolbar">
                    <content>
                        <ToolbarSpacer id="idToolbarSpacer"/>
						<Button id="ButtonId1" text="{com>BUTTON_SAVE}" icon="sap-icon://save" press="onSave" />
                    </content>
                </OverflowToolbar>
                <l:VerticalLayout id="idVerticalLayout" class="sapUiSmallMarginEnd">
                    <FlexBox id="idFlexBox" wrap="Wrap" fitContainer="true">
                        <!--Temlate ID  -->
                        <l:VerticalLayout id="idVerticalLayout1">
                            <Label id="idLabel1" labelFor="LAB_TEMPLATE_ID" text="TEMPLATE_ID"/>
                            <Input id="idInput1" value="{TEMPLATE_ID}" editable="true" width="18em"/>
                        </l:VerticalLayout>
                        <!--Temlate ID  -->
                        <l:VerticalLayout id="idVerticalLayout2" >
                            <Label id="idLabel2" labelFor="LAB_MAIL_NAME" text="MAIL_NAME"/>
                            <Input id="idInput2" value="{MAIL_NAME}"/>
                        </l:VerticalLayout>
                        <!--Temlate ID  -->
                        <l:VerticalLayout id="idVerticalLayout3">
                            <Label id="idLabel3" labelFor="LAB_MAIL_TITLE" text="MAIL_TITLE"/>
                            <Input id="idInput3" value="{MAIL_TITLE}"/>
                        </l:VerticalLayout>
                    </FlexBox>

                </l:VerticalLayout>

            </f:content>
        </f:DynamicPageHeader>
     </f:header>
     <!-- Item -->
     <f:content>
                <TextArea width="1540px"  height="600px" id="idTextArea" value="{MAIL_CONTENT}"/>
     </f:content>
</f:DynamicPage>
</mvc:View>