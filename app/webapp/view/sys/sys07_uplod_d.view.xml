<mvc:View controllerName="umc.app.controller.sys.sys07_uplod_d" 
	displayBlock="true" 
xmlns:core="sap.ui.core" 
xmlns="sap.m"	
xmlns:f="sap.f" 
xmlns:unified="sap.ui.unified" 
xmlns:layout="sap.ui.layout" 
xmlns:t="sap.ui.table" 
xmlns:mvc="sap.ui.core.mvc"
xmlns:form="sap.ui.layout.form"
xmlns:fb="sap.ui.comp.filterbar">


	<Panel id="fileUpload" expandable="true" expanded="true" busy="{localModel>/busy}" headerText="{sys>SYS07_TITLE_UPLOAD}" width="95%" height="15%"  class="sapUiResponsiveMargin">
	    
		
		<!--下载模板-->
        <Button id="downloadTemplateButton" text="{sys>U_B_DOWNLOAD_TEMPLATE}" press="onExportTemple" icon="sap-icon://download" type="Transparent"/>
		<!--上传文件-->
		<unified:FileUploader id="fileUploader" sameFilenameAllowed="true" buttonText="{sys>SD07_B_SELECT}" fileType="xlsx,xls" change="onFileChange" width="40rem" />
	</Panel>

	<Panel id="idpanel1" expandable="true" expanded="true" busy="{localModel>/busy}" headerText="{sys>SD07_RESULT}" width="95%" height="75%" class="sapUiResponsiveMargin">
		<t:Table id="tableUploadData" rows="{path: 'workInfo>/'}" class="sapUiSizeCompact" selectionMode='MultiToggle'    threshold="20">
			<t:extension>
				<OverflowToolbar id="idoverflowtooblar1">	
					<Text id="idtext1" text="{/logInfo}"/>
					<ToolbarSpacer id="idtoolbarspacer1"/>
					<Button id="_IDGenButton2" text="{sys>SD07_B_CHECK}" press="onCheck" enabled="true"/>
					<Button id="_IDGenButton3" text="{sys>SD07_B_RUN}" press="onSave" enabled="{viewModel>/isButtonEnabled}"/>	
					<Button id="_IDGenButton4" icon="sap-icon://excel-attachment" type="Transparent" press="onExport" enabled="{=${local>/excelSet}.length > 0}" text="{sys>SD07_B_EXPORTEXCEL}" tooltip="{sys>SD07_B_EXPORTEXCEL}"/>
				</OverflowToolbar>
			</t:extension>

			<t:columns>

				<!-- CHECK状态 -->
				<t:Column id="Status" width="6rem" sortProperty="STATUS" filterProperty="STATUS" hAlign="Center">
					<Label id="_IDGenLabel1" text="{sys>SD07_STATUS}"/>
					<t:template>
						<ObjectStatus id="_IDGenObjectStatus1" icon="{workInfo>I_CON}" state="{workInfo>STATUS}" />
					</t:template>
				</t:Column>

				<!-- 实行结果 -->
				<t:Column id="Result" width="10rem" sortProperty="STATUS" filterProperty="STATUS">
					<Label id="_IDGenLabel2" text="{sys>SD07_RESULT}"/>
					<t:template>
						<Text id="_IDGenText3" text="{workInfo>STATUS}" />
					</t:template>
				</t:Column>

				<!-- メッセージ -->
				<t:Column id="Message" width="20rem" sortProperty="MSG_TEXT" filterProperty="MSG_TEXT">
					<Label id="_IDGenLabel3" text="{sys>SD07_MESSAGE}"/>
					<t:template>
						<Text id="_IDGenText4" text="{workInfo>MSG_TEXT}" width="18em" tooltip="{local>MESSAGE}"/>
					</t:template>
				</t:Column>
				<t:Column  width="10rem" sortProperty="PROCESS_CODE" filterProperty="PROCESS_CODE">
					<t:customData>
						<core:CustomData key="p13nData" value='\{"columnKey":"PROCESS_CODE", "leadingProperty":"PROCESS_CODE"}'/>
					</t:customData>
					<Label  text="{sys>SD07_PROCESS_CODE}"/>
					<t:template>
						<Text  text="{workInfo>PROCESS_CODE}"/>
					</t:template>
				</t:Column>

				<t:Column  width="10rem" sortProperty="PROJECT_NO" filterProperty="PROJECT_NO">
					<t:customData>
						<core:CustomData key="p13nData" value='\{"columnKey":"PROJECT_NO", "leadingProperty":"PROJECT_NO"}'/>
					</t:customData>
					<Label  text="{sys>SYS07_PROJECT_NO}"/>
					<t:template>
						<Text  text="{workInfo>PROJECT_NO}"/>
					</t:template>
				</t:Column>

				<t:Column  width="10rem" sortProperty="REQUISITION_VERSION" filterProperty="REQUISITION_VERSION">
					<t:customData>
						<core:CustomData key="p13nData" value='\{"columnKey":"REQUISITION_VERSION", "leadingProperty":"REQUISITION_VERSION"}'/>
					</t:customData>
					<Label  text="{sys>SYS07_REQUISITION_VERSION}"/>
					<t:template>
						<Text  text="{workInfo>REQUISITION_VERSION}"/>
					</t:template>
				</t:Column>
				
				<t:Column  width="10rem" sortProperty="COST_REQUISITION_NO" filterProperty="COST_REQUISITION_NO">
					<t:customData>
						<core:CustomData key="p13nData" value='\{"columnKey":"COST_REQUISITION_NO", "leadingProperty":"COST_REQUISITION_NO"}'/>
					</t:customData>
					<Label  text="{sys>SYS07_COST_REQUISITION_NO}"/>
					<t:template>
						<Text  text="{workInfo>COST_REQUISITION_NO}"/>
					</t:template>
				</t:Column>
				
			
			</t:columns>
		</t:Table>
	</Panel>
</mvc:View>